@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Website.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />

<body class="d-flex h-100 text-center text-bg-light bgcolor">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0 text-white">RoberHejin</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" asp-page="/Login/Login">Log in/ Register</a>
                </nav>
            </div>
            
        </header>

        <main class="px-3 text-light mb-auto pt-auto text-center">
            <p class="greeting">Welcome to RobertHejin</p>
            <h3>Groceries delivered in minutes</h3>
            <p class="lead">We deliver your groceries within minutes and at supermarket prices.</p>
            <p class="lead">
                <button type="button" class="btn btn-lg btn-secondary fw-bold border-dark bg-light text-black"> <a class="btn-link text-dark" asp-page="/Login/Login">Start shopping</a> </button>
            </p>
        </main>
    </div>
  </body>
